@using Metrocare.WebUI.HtmlHelpers;
@model Metrocare.Common.UsuarioDto

 

    
    <div class="row">
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Nome do Usuário</label>
                @HtmlControls.TextBox("nome", new { @class = "form-control", @value = Model.nome, @placeholder = "Nome do Usuário", @tabindex = "1", @disabled="true" })
            </div>
        </div>
    </div>
    
    <hr />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Logradouro</label>
                @HtmlControls.TextBox("logradouro", new { @class = "form-control", @value = Model.logradouro, @placeholder = "Logradouro", @tabindex = "2", @disabled="true" })
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Complemento</label>
                @HtmlControls.TextBox("complemento", new { @class = "form-control", @value = Model.logradouro, @placeholder = "Complemento", @tabindex = "3", @disabled="true" })
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Nro.</label>
                @HtmlControls.TextBox("numero", new { @class = "form-control", @value = Model.numero, @placeholder = "Número", @tabindex = "3", @maxlength = "5", @disabled="true" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Bairro</label>
                @HtmlControls.TextBox("bairro", new { @class = "form-control", @value = Model.bairro, @placeholder = "Bairro", @tabindex = "5", @disabled="true" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Cidade</label>
                @HtmlControls.TextBox("cidade", new { @class = "form-control", @value = Model.cidade, @placeholder = "Cidade", @tabindex = "6", @disabled="true" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Uf</label>
                @{ 
                    var result = EInputUF.None;

                    foreach (var value in Enum.GetValues(typeof(EInputUF)))
                    {
                        if (value.ToString() == Model.uf)
                        {
                            result = (EInputUF)value;
                            break;
                        }
                    }

                    @HtmlControls.DropDownListCustomUF("uf", result, new { @class = "form-control", @value = Model.uf, @placeholder = "Estado", @tabindex = "7", @disabled="true" }); 
                }
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Cep</label>
                @HtmlControls.TextBox("cep", new { @class = "form-control", @value = Model.cep, @placeholder = "cep", @tabindex = "7", @maxlength = "8", @disabled="true" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Cpf</label>
                @HtmlControls.TextBox("cpf", new { @class = "form-control", @value = Model.cpf, @placeholder = "Cpf", @tabindex = "8", @maxlength = "15", @disabled="true" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Rg</label>
                @HtmlControls.TextBox("rg", new { @class = "form-control", @value = Model.rg, @placeholder = "Rg", @tabindex = "9", @maxlength = "15", @disabled="true" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Telefone</label>
                @HtmlControls.TextBox("telefone", new { @class = "form-control", @value = Model.telefone, @placeholder = "Telefone", @tabindex = "10", @disabled="true" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Celular</label>
                @HtmlControls.TextBox("celular", new { @class = "form-control", @value = Model.celular, @placeholder = "Celular", @tabindex = "11", @disabled="true" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">E-mail</label>
                @HtmlControls.TextBox("email", new { @class = "form-control", @value = Model.email, @placeholder = "E-mail", @tabindex = "12", @maxlength = "30", @disabled="true" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Data de Nascimento</label>
                @HtmlControls.DatePickerCustom("dt_nascimento","dt_nascimento", Model.dt_nascimento, new { @tabindex = "13", @disabled="true" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Latitude</label>
                @HtmlControls.TextBox("latitude", new { @class = "form-control", @value = Model.latitude, @placeholder = "Latitude", @tabindex = "13", @maxlength = "10", @disabled="true" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Longitude</label>
                @HtmlControls.TextBox("longitude", new { @class = "form-control", @value = Model.longitude, @placeholder = "Longitude", @tabindex = "14", @maxlength = "10", @disabled="true" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Código Ibge</label>
                @HtmlControls.TextBox("ibge", new { @class = "form-control", @value = Model.ibge, @placeholder = "ibge", @tabindex = "15", @maxlength = "10", @disabled="true" })
            </div>
        </div>
    </div>

<script src="@Url.Content("~/Content/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js?v=1")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/assets/global/plugins/jquery-inputmask/jquery.inputmask.bundle.min.js?v=1")" type="text/javascript"></script>
<script>
    $(document).ready(function () {
        
        $("#telefone").inputmask("mask", {
            "mask": "(99) 9999-9999"
        });

        $("#celular").inputmask("mask", {
            "mask": "(99) 99999-9999"
        });

        $("#cpf").inputmask("mask", {
            "mask": "999.999.999-99"
        });

        $("#rg").inputmask("mask", {
            "mask": "99.999.999-9"
        });

        $("#dt_nascimento").inputmask("mask", {
            "mask": "99/99/9999"
        });

        $("#numero").keydown(function (e) {
            if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 110, 190]) !== -1 ||
               (e.keyCode === 65 && (e.ctrlKey === true || e.metaKey === true)) ||
               (e.keyCode >= 35 && e.keyCode <= 40)) {
                return;
            }

            if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) { e.preventDefault(); }
        });

        $("#longitude").keydown(function (e) {
            if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 110, 190]) !== -1 ||
               (e.keyCode === 65 && (e.ctrlKey === true || e.metaKey === true)) ||
               (e.keyCode >= 35 && e.keyCode <= 40)) {
                return;
            }

            if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) { e.preventDefault(); }
        });

        $("#latitude").keydown(function (e) {
            if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 110, 190]) !== -1 ||
               (e.keyCode === 65 && (e.ctrlKey === true || e.metaKey === true)) ||
               (e.keyCode >= 35 && e.keyCode <= 40)) {
                return;
            }

            if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) { e.preventDefault(); }
        });

        $("#ibge").keydown(function (e) {
            if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 110, 190]) !== -1 ||
               (e.keyCode === 65 && (e.ctrlKey === true || e.metaKey === true)) ||
               (e.keyCode >= 35 && e.keyCode <= 40)) {
                return;
            }

            if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) { e.preventDefault(); }
        });
    });
</script>
