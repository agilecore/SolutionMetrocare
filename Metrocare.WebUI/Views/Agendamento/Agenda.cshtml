@{ Layout = "~/Views/Shared/_Layout.cshtml";}
@model List<Metrocare.Common.AgendaDto> 
<link href="@Url.Content("~/Content/assets/global/plugins/fullcalendar/fullcalendar.min.css")" rel="stylesheet"/>
<h3 class="page-title">@ViewBag.Title</h3>
<div class="page-bar">
    @Html.Partial("_Breadcrumb")
</div>
<div class="row">
	<div class="col-md-12 fadeIn animated">
		<div class="portlet box green-meadow calendar">
			<div class="portlet-title">
				<div class="caption">
					<i class="fa fa-gift"></i>Agenda do dia @DateTime.Now.ToShortDateString()
				</div>
			</div>
			<div class="portlet-body">
				<div class="row">
					<div class="col-md-3 col-sm-12">
						<h3 class="event-form-title">Nº da beneciário</h3>
						<div id="external-events">
							<form class="inline-form">
								<input type="text" value="" class="form-control" placeholder="" id="event_title"/><br/>
								<a href="javascript:;" id="event_add" class="btn default">Buscar</a>
							</form>
							<hr/>
							<div id="event_box">
							</div>
							<label for="drop-remove">
							<input type="checkbox" id="drop-remove"/>remove after drop </label>
							<hr class="visible-xs"/>
						</div>
					</div>
					<div class="col-md-9 col-sm-12">
						<div id="calendar" class="has-toolbar">
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- IMPORTANT! fullcalendar depends on jquery-ui.min.js for drag & drop support -->
<script src="@Url.Content("~/Content/assets/global/plugins/moment.min.js")" ></script>
<script src="@Url.Content("~/Content/assets/global/plugins/fullcalendar/fullcalendar.min.js")" ></script>
<script src="@Url.Content("~/Content/assets/global/plugins/fullcalendar/lang/pt-br.js")" ></script>
            
<script src="@Url.Content("~/Content/assets/global/scripts/Metrocare.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/assets/admin/layout/scripts/demo.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/assets/admin/pages/scripts/calendar.js")" ></script>
 <script>
     jQuery(document).ready(function () {
         // initiate layout and plugins
         Metrocare.init(); // init Metrocare.core components
         //Layout.init(); // init current layout
         Demo.init(); // init demo features
         Calendar.init();
     });
</script>




			
	