@using Metrocare.WebUI.HtmlHelpers;
@{
    if ((bool)ViewBag.Enable)
    {
    <div class="tabbable-custom ">
        <ul class="nav nav-tabs ">
            <li class="active">
                <a href="#busca" data-toggle="tab" aria-expanded="true">Filtros</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="busca">
                @using (Html.BeginForm("Find", "Dependente", FormMethod.Post))
                {
                    <div class="form-body" style="margin: auto 5px auto 5px;">
                        <div class="row">
                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label>Nome</label>
                                    @HtmlControls.TextBox("nome", new { @class = "form-control", @name = "nome", @autocomplete = "off", @tabindex = "1" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-actions pull-left" style="margin-left: 5px;">
                                    <button type="submit" class="btn blue-hoki pull-right">Filtrar</button>
                                </div>
                            </div>
                        </div>
                    </div>                    
                }
            </div>
        </div>
    </div> 
    }
}