@using Metrocare.WebUI.HtmlHelpers;
@model Metrocare.Common.UsuarioDto

@using (Html.BeginForm("Save", "Usuario", FormMethod.Post, new { @id = "form-usuario" }))
{   
    @Html.AntiForgeryToken()
    
    @HtmlControls.HiddenField("id_usuario",  new { @value = Model.id_usuario, @autocomplete = "off" });
    @HtmlControls.HiddenField("dt_cadastro", new { @value = DateTime.Now, @autocomplete     = "off" });
    
    <div class="row">
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Nome do Usuário</label>
                @HtmlControls.TextBox("nome", new { @class = "form-control", @value = Model.nome, @placeholder = "Nome do Usuário", @tabindex = "1" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="btn-group btn-group-justified" style="margin-top: 30px;">
                <a href="javascript:;" class="btn btn-default">Histórico de acessos</a>
                <a href="javascript:;" class="btn btn-default">Imprimir cadastro</a>
            </div>
        </div>
    </div>
    
    <hr />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Logradouro</label>
                @HtmlControls.TextBox("logradouro", new { @class = "form-control", @value = Model.logradouro, @placeholder = "Logradouro", @tabindex = "2" })
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Complemento</label>
                @HtmlControls.TextBox("complemento", new { @class = "form-control", @value = Model.logradouro, @placeholder = "Complemento", @tabindex = "3" })
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Nro.</label>
                @HtmlControls.TextBox("numero", new { @class = "form-control", @value = Model.numero, @placeholder = "Número", @tabindex = "3", @maxlength = "5" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Bairro</label>
                @HtmlControls.TextBox("bairro", new { @class = "form-control", @value = Model.bairro, @placeholder = "Bairro", @tabindex = "5" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Cidade</label>
                @HtmlControls.TextBox("cidade", new { @class = "form-control", @value = Model.cidade, @placeholder = "Cidade", @tabindex = "6" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Uf</label>
                @{ 
                    var result = EInputUF.None;

                    foreach (var value in Enum.GetValues(typeof(EInputUF)))
                    {
                        if (value.ToString() == Model.uf)
                        {
                            result = (EInputUF)value;
                            break;
                        }
                    }

                    @HtmlControls.DropDownListCustomUF("uf", result, new { @class = "form-control", @value = Model.uf, @placeholder = "Estado", @tabindex = "7" }); 
                }
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Cep</label>
                @HtmlControls.TextBox("cep", new { @class = "form-control", @value = Model.cep, @placeholder = "cep", @tabindex = "7", @maxlength = "8" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Cpf</label>
                @HtmlControls.TextBox("cpf", new { @class = "form-control", @value = Model.cpf, @placeholder = "Cpf", @tabindex = "8", @maxlength = "15" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Rg</label>
                @HtmlControls.TextBox("rg", new { @class = "form-control", @value = Model.rg, @placeholder = "Rg", @tabindex = "9", @maxlength = "15" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Telefone</label>
                @HtmlControls.TextBox("telefone", new { @class = "form-control", @value = Model.telefone, @placeholder = "Telefone", @tabindex = "10" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Celular</label>
                @HtmlControls.TextBox("celular", new { @class = "form-control", @value = Model.celular, @placeholder = "Celular", @tabindex = "11" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">E-mail</label>
                @HtmlControls.TextBox("email", new { @class = "form-control", @value = Model.email, @placeholder = "E-mail", @tabindex = "12", @maxlength = "30" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Data de Nascimento</label>
                @Html.TextBoxFor(m => m.dt_nascimento, "{0:dd/MM/yyyy}", new { @class = "form-control" })
            @*    @HtmlControls.TextBox("dt_nascimento", new {@class = "form-control", @value = Model.dt_nascimento.ToString(), @tabindex = "13" })
            *@</div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Latitude</label>
                @HtmlControls.TextBox("latitude", new { @class = "form-control", @value = Model.latitude, @placeholder = "Latitude", @tabindex = "13", @maxlength = "10" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Longitude</label>
                @HtmlControls.TextBox("longitude", new { @class = "form-control", @value = Model.longitude, @placeholder = "Longitude", @tabindex = "14", @maxlength = "10" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Código Ibge</label>
                @HtmlControls.TextBox("ibge", new { @class = "form-control", @value = Model.ibge, @placeholder = "ibge", @tabindex = "15", @maxlength = "10" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group" style="padding-bottom: 3px; margin-bottom: 0;">
                <label class="control-label">Senha</label>
                @HtmlControls.Password("senha", new { @class = "form-control", @value = Model.senha, @placeholder = "Senha", @tabindex = "14", @maxlength = "16" })
            </div>
        </div>
    </div>

    <div class="noborder" style="margin: 15px 5px 0px 5px; text-align: right;">
        <input id="btnSave" type="submit" class="btn blue-hoki" title="Salvar" value="Salvar" tabindex="16" />
        <input id="btnClear" type="button" class="btn default" title="Limpar" value="Limpar" tabindex="17" />
    </div>         
} 