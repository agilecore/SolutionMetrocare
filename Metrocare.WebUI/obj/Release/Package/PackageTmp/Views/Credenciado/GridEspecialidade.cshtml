@using Metrocare.WebUI.HtmlHelpers;
@model List<Metrocare.Common.EspecialidadeDto>

<div class="row">
    <div class="col-md-6">
        <div class="form-group" style="padding-left:5px;">
            <label class="control-label">Especialidade do Profissional</label>
            @HtmlControls.DropDownList("id_especialidade", EInputModel.Especialidades, new { @value=String.Empty, @class = "form-control", @tabindex = "1" })
        </div>
    </div>
    <div class="col-md-6" style="padding-right:0px;">
        <div class="form-group" style="padding-right:-15px;">
            <label class="control-label">Consultório (Prestador)</label>
            @HtmlControls.DropDownList("id_prestador", EInputModel.Prestador, new { @value=String.Empty, @class = "form-control", @tabindex = "1" })
        </div>
    </div>
</div>  

