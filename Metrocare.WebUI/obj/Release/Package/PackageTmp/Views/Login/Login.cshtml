@using Metrocare.WebUI.HtmlHelpers;
@model Metrocare.Common.LoginFilter

@using (Html.BeginForm("Enter", "Login", FormMethod.Post, new { @class = "login-form" }))
{ 
    <h3 class="form-title">Acesso</h3>

    <div class="alert alert-danger display-hide">
        <button class="close" data-close="alert"></button>
        <span>Informe um usuário e senha. </span>
    </div>

    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Email</label>
        @HtmlControls.TextBox("Email", new { @class = "form-control form-control-solid placeholder-no-fix", @value = "john_doe@hotmail.com", @name = "email", @placeholder = "Email", @autocomplete = "off", @tabindex = "1" })
    </div>

    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Senha</label>
        @HtmlControls.Password("Senha", new { @class = "form-control form-control-solid placeholder-no-fix", @value = "12345", @name = "senha", @placeholder = "Senha",   @autocomplete = "off", @tabindex = "2"})
    </div>
    
    <div class="form-actions">
        <button type="submit" class="btn btn-success uppercase">Entrar</button>
        <a href="javascript:;" id="forget-password" class="forget-password">Esqueceu sua Senha ?</a>
    </div>

    <div class="create-account">
        <p>
            <a href="javascript:;" id="register-btn" class="uppercase">Criar uma conta de acesso</a>
        </p>
    </div>
    @Html.AntiForgeryToken()
}