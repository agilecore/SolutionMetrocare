@using Metrocare.WebUI.HtmlHelpers;
@{
    if ((bool)ViewBag.Enable)
    {
    <div class="tabbable-custom ">
        <ul class="nav nav-tabs ">
            <li class="active">
                <a href="#busca" data-toggle="tab" aria-expanded="true">Filtros</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="busca">
                @using (Html.BeginForm("Buscar", "Log", FormMethod.Post))
                {
                    <div class="form-body">
                        <div class="row">
                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label>Nome</label>
                                    @HtmlControls.TextBox("nome", new { @class = "form-control", @name = "nome", @autocomplete = "off", @tabindex = "1" })
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label>E-mail</label>
                                    @HtmlControls.TextBox("email", new { @class = "form-control", @name = "email", @autocomplete = "off", @tabindex = "1" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-actions pull-left">
                                    <button type="submit" class="btn blue-hoki pull-right">Filtrar</button>
                                </div>
                            </div>
                        </div>
                    </div>                    
                }
            </div>
        </div>
    </div>
    }
}